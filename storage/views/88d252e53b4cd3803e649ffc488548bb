<section id="notizen">
	<h2>Notizen</h2>
	<?php if($ncount > 1): ?>
	<div class="tabbable tabs-right">
		<?php if($ncount > 4): ?>
		<ul class="nav nav-tabs">
			<?php for($n = 1; $n < ($ncount / 4) + 1; $n++): ?>
			<li <?php if($n == 1) echo 'class="active"'; ?>><a href="#n<?php echo  $n ; ?>" data-toggle="tab"><?php echo  $n ; ?></a></li>
			<?php endfor; ?>
		</ul>
		<?php endif; ?>
		<div class="tab-content">
			<?php $i = 0; $k = 1; ?>
			<?php foreach($notizen as $n): ?>
				<?php if($i == 0): ?>
			<div class="tab-pane active" id='n1'>
				<?php endif; ?>
				<?php if($i > 4): ?>
			<div class="tab-pane" id='n<?php echo  $k ; ?>'>
				<?php endif; ?>
				<div>
					<div class="well well-small">
						<?php if($admin): ?>
							<?php echo  Schnipsel::editbtn('n'.$n->id); ?>
						<?php endif; ?>
						<?php echo  Schnipsel::pinlabel('gastpins', $n->gastpins) ; ?>
						<?php echo  Schnipsel::pinlabel('leiterpins', $n->leiterpins) ; ?>
						<?php echo  Schnipsel::pinlabel('missionspins', $n->missionspins) ; ?>
						<div><?php echo  $n->text ; ?></div>
						<div class="annotation">
							<?php echo  HTML::link_to_action('spieler@profil', $n->autor->name, array($n->autor->id)) ; ?> am <?php echo  Schnipsel::datumsformat($n->created_at) ; ?>. 
							<?php if($n->created_at != $n->updated_at): ?>
								Zuletzt bearbeitet
									<?php if($n->autor->id != $n->editierer->id): ?>
										von <?php echo  HTML::link_to_action('spieler@profil', $n->editierer->name, array($n->editierer->id)) ; ?> 
									<?php endif; ?>
								am <?php echo  Schnipsel::datumsformat($n->updated_at) ; ?>.
							<?php endif; ?>
						</div>
					</div>
				</div>
				<?php $i++; ?>
				<?php if($i == 0 || $i > 4): ?>
			</div>
					<?php $i = 1; $k++; ?>
				<?php endif; ?>
			<?php endforeach; ?>
		</div>
	</div>
	<?php endif; ?>
</section>

<section id="missionen">
	<h2>Missionen</h2>
	<div class="content">
		<p><strong><?php echo $mcount[0]; ?></strong> anwesend, <strong><?php echo $mcount[1]; ?></strong> entschuldigt, <strong><?php echo $mcount[2]; ?></strong> unentschuldigt.
				Davon <strong><?php echo $mcount[3]; ?></strong> Spielleitungen, <strong><?php echo $mcount[4]; ?></strong> Gastmissionen.</p>
		<div class="well well-small"	>
			<h5>Filter</h5>
			<form class="form-inline">
				<label class="checkbox"><input type="checkbox" name="chAnwesend"> Anwesend</label>
				<label class="checkbox"><input type="checkbox" name="chAnwesend"> Entschuldigt</label>
				<label class="checkbox"><input type="checkbox" name="chAnwesend"> Unentschuldigt</label>
				<label class="checkbox"><input type="checkbox" name="chAnwesend"> Spielleiter</label>
				<label class="checkbox"><input type="checkbox" name="chAnwesend"> Gastmission</label>
			</form>
		</div>
		<div id='missionenliste'>
		<?php foreach($missionen as $me): ?>
			<?php
				$classes = "mission ";
				$icons = "";
				if ($me->anwesenheit == 0) {
					$classes .= "anwesend ";
					$icons .= '<i class="icon-check icon-white" title="Anwesend"></i>';
				}
				if ($me->anwesenheit == 1) {
					$classes .= "entschuldigt ";
					$icons .= '<i class="icon-remove-circle icon-white" title="Entschuldigt abwesend"></i>';
				}
				if ($me->anwesenheit == 2) {
					$classes .= "unentschuldigt ";
					$icons .= '<i class="icon-ban-circle icon-white" title="Unentschuldigt abwesend"></i>';
				}
				if($me->leiterpins > 0) {
					$classes .= "leiter ";
					$icons .= '<i class="icon-edit icon-white" title="Spielleiter"></i>';
				}
				if ($me->gastpins > 0) {
					$classes .= "gast ";
					$icons .= '<i class="icon-share icon-white" title="Gastmission"></i>';
				}
			?>
			<div class="<?php echo $classes; ?>">
				<div class="icons"><?php echo  $icons ; ?></div>
				<?php echo  $me->mission->komponente->name ; ?> 
				- <?php echo  Schnipsel::datumsformat($me->mission->created_at, "d.m.Y") ; ?>
			</div>

			<?php /*<p><?php echo  $me->mission->komponente->name ; ?> - <?php echo  Schnipsel::datumsformat($me->mission->created_at, "d.m.Y") ; ?>
					<?php if($me->leiterpins > 0): ?>
						- <i class="icon-edit icon-white" title="Spielleiter"></i>
					<?php endif; ?>
					<?php if($me->gastpins > 0): ?>
						- <i class="icon-share icon-white" title="Gastmission"></i>
					<?php endif; ?>
			</p> */ ?>
		<?php endforeach; ?>
		</div>
	</div>
</section>

